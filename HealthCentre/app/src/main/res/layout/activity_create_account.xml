<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="400px" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"
            android:text="New Patient Account"
            android:textColor="#FF8A80"
            android:textSize="35sp"
            app:fontFamily="@font/allan" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="200px" />

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textColor="#FF8A80"
            android:textColorHint="#FF8A80"
            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textColor="#FF8A80"
            android:textColorHint="#FF8A80"
            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Username / Email"
            android:inputType="textPersonName"
            android:textColor="#FF8A80"
            android:textColorHint="#FF8A80"
            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Set a password"
            android:inputType="textPassword"
            android:textColor="#FF8A80"
            android:textColorHint="#FF8A80"
            android:textStyle="italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50px" />

        <Button
            android:id="@+id/createaccount"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape"
            android:text="Create Account"
            android:textColor="#F9FCFC"
            android:typeface="normal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50px" />

        <Button
            android:id="@+id/alreadyCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Already have an account?"
            android:textColor="#F76154"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            app:fontFamily="@font/anaheim"
            android:background="@null"
            android:textAllCaps="false"
            android:onClick="AlreadyCreated"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>